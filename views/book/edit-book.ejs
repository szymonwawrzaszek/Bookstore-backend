<%- include('../includes/nav.ejs') %>
<h2>Edit book</h2>
<hr/>
<% if(errors.length > 0){ %>
    <div class="error-box">
        <% errors.forEach(err => { %>
            <div><%= err %></div>  
        <% }); %>
    </div>
<% } %>
<form action="/author/<%= author.id %>/book-edit" class="form-group" method="POST" enctype="multipart/form-data">
    <div>
        <input type="hidden" name="id" value="<%= book.id %>">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= book.title %>" id="title" class="form-control"/>
        <br/>
        <label for="pageCount">Page count</label>
        <input type="number" name="pageCount" value="<%= book.pageCount %>" id="pageCount" class="form-control"/>
        <br/>
        <label for="image">Image</label>
        <br/>
        <input type="file" name="image" id="image" >
        <br/><br/>
        <label for="description">Description</label>
        <textarea cols="4" name="description" id="description" class="form-control"><%= book.description %></textarea>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </div>
    <button type="submit" class="btn btn-success">Edit book</button>
</form>

