<%- include('../includes/nav.ejs') %>

<% if(books.length > 0) { %>
    <% if( !isAuthenticated && books.length >= 5) { %>
        <% books.slice(0, 5).forEach(book => { %>
            <h4>
                <a href="/author/<%= book.author %>/book/<%= book.id %>">
                    <%= book.title %>
                </a>     
            </h4>    
        <% }) %> 
        <h4> 
            <p>...</p>
            <p>Want to see more <a href="/login">login</a></p> 
        </h4>  
    <% } else { %>     
        <% books.forEach(book => { %>
            <h4>
                <a href="/author/<%= book.author %>/book/<%= book.id %>">
                    <%= book.title %>
                </a>     
            </h4>    
        <% }) %> 
    <% } %>    
<% } else { %>    
    <h2>No books yet!</h2>
<% } %>  

