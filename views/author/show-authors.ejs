<%- include('../includes/nav.ejs') %>

<% if(authors.length > 0) { %>
    <h2>Authors:</h2>
    <hr/>
    <% authors.forEach(author => { %>
        <h4>
            <a href="/author/<%= author.id %>">
                <%= author.firstName %> <%= author.lastName %>
            </a>     
        </h4>    
    <% }) %> 
<% } else { %>    
    <h2>No authors yet!</h2>
<% } %>   
<a href="/author/add" class="btn btn-primary">Add author</a>
